<!DOCTYPE html>
<html lang="{{meta.lang}}">

<head>
    <meta charset="UTF-8">   
    <meta name="description" content="{{meta.description}}">
    <meta name="keywords" content="{{meta.keywords}}">
    <meta name="author" content="{{meta.first_name}} {{meta.last_name}}">
    <meta name="robots" content="index,nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta name="generator" content="mustache-curricula">

    <!-- Open Graph meta tags -->
    <meta property="og:image" content="{{meta.profile_pic}}">
    <meta property="og:title" content="{{meta.title}}">
    <meta property="og:url" content="{{meta.site_url}}">
    <meta property="og:site_name" content="{{meta.title}}">
    <meta property="og:type" content="profile">
    <meta property="og:description" content="{{meta.description}}">
    <meta property="profile:first_name" content="{{meta.first_name}}">
    <meta property="profile:last_name" content="{{meta.last_name}}">
    <meta property="profile:username" content="{{meta.facebook}}">
    <meta property="profile:gender" content="{{meta.gender}}">

    <!-- Twitter cards -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{meta.title}}">
    <meta name="twitter:site" content="{{meta.twitter}}">
    <meta name="twitter:creator" content="{{meta.twitter}}">
    <meta name="twitter:description" content="{{meta.description}}">
    <meta name="twitter:image" content="{{meta.profile_pic}}">

    <title>{{meta.title}}</title>
    
    <link rel="canonical" href="{{meta.siteurl}}">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- http://colorschemedesigner.com/#0D21TnfIIzFzT -->
    <style type="text/css">
        body {
            padding-top: 40px;
            background-image: url('img/light_noise_diagonal.png');
        }
        .footer {
            background-color: #F5F5F5;
            border-top: 1px solid #E5E5E5;
            margin-top: 70px;
            padding: 30px 0;
            text-align: center;
        }
        .footer p {
            color: #777777;
            margin-bottom: 0;
        }
        ul.row-fluid {
            margin: 0;
        }

        ul.contacts > li {
            width: 96px;
            height: 96px;
        }

        /* Centered thumbnails
         * From: http://stackoverflow.com/a/10106240 */
        .thumbnails {
            text-align:center;
        }
        .thumbnails > li {
            display: inline-block;
            *display:inline; /* ie7 fix */
            float: none; /* this is the part that makes it work */
        }

    </style>
    <style type="text/css" media="print">
        @page {
            margin-top: 2cm;
            size: portrait;
            orphans:4;
            widows:2;
        }
        @media print
        {
            .noprint {
                display: none;
            }

            .email a:after,
            a.no-print-link:after {
                content: "" !important;
            }
            .unbreakable {
                page-break-inside: avoid;
            }
            .pagebreak {
                page-break-before: always;
            }
            .pageheader h2 {
                page-break-after: avoid;
            }
        }
    </style>
    <link href="css/bootstrap-responsive.min.css" rel="stylesheet">
    
    <script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="js/jquery.emailSpamProtection.1.0.js"></script>
    <script type="text/javascript" src="js/holder.js"></script>
    <script type="text/javascript">
        /*jslint browser: true */
        /*global $: false */

        $(document).ready(function () {
            "use strict";
            $("body").emailSpamProtection("email");
        });
    </script>
</head>
<body data-spy="scroll" data-target=".navbar">

    <div class="navbar navbar-inverse navbar-fixed-top noprint">
        <div class="navbar-inner">
            <div class="content">
                <a class="btn btn-navbar noprint" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a href="#" class="brand">{{meta.first_name}} {{meta.last_name}}</a>
                <ul class="nav pull-right">
                    {{#versions}}
                    <li>
                        <a href="{{url}}">{{title}}</a>
                    </li>
                    {{/versions}}
                </ul>

                <div class="nav-collapse collapse noprint">
                    <ul class="nav nav-pills">
                        <li><a href="#bio"><i class="icon-user"></i>{{headers.bio}}</a></li>
                        <li><a href="#contact"><i class="icon-envelope"></i>{{headers.contact}}</a></li>
                        <li><a href="#portfolio"><i class="icon-briefcase"></i>{{headers.portfolio}}</a></li>
                        <li><a href="#awards"><i class="icon-certificate"></i>{{headers.awards}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
    
        <section id="bio" class="container">
            <div class="page-header well unbreakable">
                <div class="row-fluid">
                    <div class="span4 text-center">
                        <img class="img-polaroid img-circle profile-pic"
                            alt="{{meta.first_name}} {{meta.last_name}}"
                            title="{{meta.first_name}} {{meta.last_name}}"
                            src="{{meta.profile_pic}}"/>
                    </div>
                    <div class="span8">
                        <h2>{{bio.heading}}</h2>

                        {{{bio.description}}}
                    </div>
                </div> 
            </div>
        
        </section>   

        <section id="contact" class="unbreakable container">
            <div class="page-header">
                <h2>{{headers.contact}}</h2>
            </div>
            <dl class="dl-horizontal">
                {{#emails}}
                <dt><b>{{title}}:</b></dt>
                    <dd>
                        <span class="email">{{email}}</span>
                    </dd>
                {{/emails}}
            </dl>

            <ul class="unstyled contacts text-center inline">
                {{#social}}
                <li class="unbreakable text-center">
                    <a class="no-print-link"
                        target="_blank"
                        href="{{url}}">
                        <img src="img/social/{{icon}}.png"
                            alt="{{network}}" title="{{network}}">
                        <p><small>{{username}}</small></p>
                    </a>
                </li>
                {{/social}}
            </ul>
        </section>
        
        <section id="portfolio" class="pagebreak container">
            <div class="page-header">
                <h2>{{headers.portfolio}}</h2>
            </div>

            {{#portfolio}}
            <div class="row-fluid">
                {{#row}}
                <div class="unbreakable span6 container ">
                    {{#if url}}
                    <a target="_blank"
                        class="no-print-link"
                        href="{{url}}">
                        <h3>{{{title}}}</h3>
                    </a>
                    {{else}}
                    <h3>{{{title}}}</h3>
                    {{/if}}
                    
                    <small class="muted">({{duration}})</small>
                    <ul class="thumbnails text-center">
                        {{#thumbs}}
                        <li>
                            <div class="thumbnail">
                                {{#if url}}
                                <a target="_blank"
                                    class="no-print-link"
                                    href="{{url}}">
                                    <img src="img/portfolio/{{thumb}}"
                                    alt="{{alt}}"
                                    title="{{title}}">
                                </a>
                                {{else}}
                                    <img src="img/portfolio/{{thumb}}"
                                    alt="{{alt}}"
                                    title="{{title}}">
                                {{/if}}
                            </div>
                        </li>
                        {{/thumbs}}
                    </ul>

                    <p>{{{description}}}</p>

                    {{#if url}}
                    {{#if button_text}}
                    <a target="_blank"
                        class="btn btn-primary btn-large"
                        href="{{url}}">{{button_text}}</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/row}}

            </div>
            {{/portfolio}}
        </section>

        <section id="awards" class="pagebreak">    
            <div class="page-header">
                <h2>{{headers.awards}}</h2>
            </div>

            {{#awards}}
            <div class="row-fluid">
                {{#row}}
                <div class="span6 unbreakable">
                    <h3>{{{title}}}</h3>
                    <h4>{{{subtitle}}}</h4>
                    <small class="muted">{{location}}</small>
                    <ul class="thumbnails">
                        {{#thumbs}}
                        <li>
                            <div class="thumbnail">
                                <img src="img/awards/{{thumb}}"
                                    alt="{{alt}}" title="{{title}}">
                            </div>
                        </li>
                        {{/thumbs}}
                    </ul>
                    <ul class="unstyled inline">
                        {{#links}}
                        <li><a class="btn btn-info" target="_blank" href="{{url}}">
                            {{title}}
                        </a></li>
                        {{/links}}
                    </ul>
                </div>
                {{/row}}
            </div>
            {{/awards}}
        </section>
    </div>

    <footer class="footer noprint">
        <div class="container">
            &copy; {{footer.copyright}}
            {{{footer.license}}}
        </div>
    </footer>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
</body>
</html>
